<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Edit_Text"
    android:layout_margin="8dp"
    >


    <ImageView
        android:id="@+id/logo_pessoa_vizualizar_mdo"
        android:layout_width="64dp"
        android:layout_height="64dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_user" />

    <TextView
        android:id="@+id/nome_pessoa_vizializacao_mdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/meditacao_pessoa_vizualizacao_mdo"
        app:layout_constraintEnd_toEndOf="@id/oracao_pessoa_visualizacao_mdo"
        />

    <TextView
        android:id="@+id/meditacao_pessoa_vizualizacao_mdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meditação"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nome_pessoa_vizializacao_mdo"
        app:layout_constraintStart_toEndOf="@id/logo_pessoa_vizualizar_mdo"
        app:layout_constraintEnd_toStartOf="@id/decoracao_pessoa_vizualizazao_mdo"
        />

    <EditText
        android:id="@+id/edt_meditacao_vizualizacao_mdo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/Edit_Text_vizualizacao_mdo"
        android:hint="00"
        android:textAlignment="center"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/meditacao_pessoa_vizualizacao_mdo"
        app:layout_constraintStart_toStartOf="@id/meditacao_pessoa_vizualizacao_mdo"
        app:layout_constraintEnd_toEndOf="@id/meditacao_pessoa_vizualizacao_mdo"
        />

    <TextView
        android:id="@+id/decoracao_pessoa_vizualizazao_mdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decoração"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nome_pessoa_vizializacao_mdo"
        app:layout_constraintStart_toEndOf="@id/meditacao_pessoa_vizualizacao_mdo"
        app:layout_constraintEnd_toStartOf="@id/oracao_pessoa_visualizacao_mdo"
        />

    <EditText
        android:id="@+id/edt_decoracao_vizualizacao_mdo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/Edit_Text_vizualizacao_mdo"
        android:hint="00"
        android:textAlignment="center"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/decoracao_pessoa_vizualizazao_mdo"
        app:layout_constraintStart_toStartOf="@id/decoracao_pessoa_vizualizazao_mdo"
        app:layout_constraintEnd_toEndOf="@id/decoracao_pessoa_vizualizazao_mdo"
        />

    <TextView
        android:id="@+id/oracao_pessoa_visualizacao_mdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oração"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/nome_pessoa_vizializacao_mdo"
        app:layout_constraintStart_toEndOf="@id/decoracao_pessoa_vizualizazao_mdo"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/edt_oracao_pessoa_vizualizacao_mdo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/Edit_Text_vizualizacao_mdo"
        android:hint="00"
        android:textAlignment="center"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/oracao_pessoa_visualizacao_mdo"
        app:layout_constraintStart_toStartOf="@id/oracao_pessoa_visualizacao_mdo"
        app:layout_constraintEnd_toEndOf="@id/oracao_pessoa_visualizacao_mdo"
        />






</androidx.constraintlayout.widget.ConstraintLayout>